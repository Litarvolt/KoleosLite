@page "/vehiculos"
@inject HttpClient Http

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3>Vehiculos</h3>
    <div>
        <input class="form-control form-control-sm d-inline-block me-2" style="width:200px" placeholder="Buscar por placa..." @bind="search" />
        <button class="btn btn-primary btn-sm" @onclick="OpenCreate">Nuevo</button>
    </div>
</div>

<table class="table table-striped table-sm">
    <thead>
        <tr>
            <th>Id</th>
            <th>Placa</th>
            <th>Marca</th>
            <th>Cliente</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @if (vehiculos == null)
        {
            <tr>
                <td colspan="5">Cargando...</td>
            </tr>
        }
        else
        {
            foreach (var v in vehiculos.Where(v => string.IsNullOrWhiteSpace(search) || v.Placa.Contains(search, StringComparison.OrdinalIgnoreCase)))
            {
                <tr>
                    <td>@v.Id</td>
                    <td>@v.Placa</td>
                    <td>@v.Marca</td>
                    <td>@v.Cliente?.NombreCompleto</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary me-1">Editar</button>
                        <button class="btn btn-sm btn-outline-danger">Eliminar</button>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@if (showCreate)
{
    <div class="modal fade show d-block" style="background:rgba(0,0,0,0.3)">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Nuevo Vehiculo</h5>
                    <button type="button" class="btn-close" @onclick="CloseCreate"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-2">
                        <label class="form-label">Placa</label>
                        <input class="form-control" @bind="model.Placa" />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">Marca</label>
                        <input class="form-control" @bind="model.Marca" />
                    </div>
                    <div class="mb-2">
                        <label class="form-label">ClienteId</label>
                        <input class="form-control" type="number" @bind="model.ClienteId" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" @onclick="CloseCreate">Cancelar</button>
                    <button class="btn btn-primary" @onclick="Create">Guardar</button>
                </div>
            </div>
        </div>
    </div>
}

@code{
    private List<Vehiculo>? vehiculos;
    private string? search;
    private bool showCreate = false;
    private Vehiculo model = new Vehiculo();
    protected override async Task OnInitializedAsync() => await Load();
    private async Task Load() => vehiculos = await Http.GetFromJsonAsync<List<Vehiculo>>("/api/vehiculos");
    private void OpenCreate() { model = new Vehiculo(); showCreate = true; }
    private void CloseCreate() { showCreate = false; }
    private async Task Create()
    {
        await Http.PostAsJsonAsync("/api/vehiculos", model);
        showCreate = false;
        await Load();
    }
}
